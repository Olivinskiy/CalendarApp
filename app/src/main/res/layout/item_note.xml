<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:padding="8dp">


    <TextView
        android:id="@+id/noteTextView2"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:gravity="center_vertical"
        android:text="12:00"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="148dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Sample Note"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/noteTextView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/noteTextView2"
        app:layout_constraintTop_toTopOf="@+id/noteTextView2" />

    <TextView
        android:id="@+id/noteTextView3"
        android:layout_width="291dp"
        android:layout_height="62dp"
        android:layout_marginTop="22dp"
        android:layout_weight="1"
        android:gravity="top"
        android:text="Sample Note2"

        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/noteTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/noteTextView"
        app:layout_constraintTop_toTopOf="@+id/noteTextView" />

    <TextView
        android:id="@+id/deleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:padding="8dp"
        android:text="Удалить"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/noteTextView3"
        app:layout_constraintStart_toEndOf="@+id/noteTextView"
        app:layout_constraintTop_toTopOf="@+id/noteTextView2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
